if (dialoguestatus) {
	draw_set_colour(c_white);
	if (charcounter < string_length(targetmsg)) {
		charcounter += textspeed;			
		if (!audio_is_playing(speakeraudio)) audio_play_sound(speakeraudio,0,false);
	}
	currentmsg = string_copy(targetmsg,1,charcounter);
	draw_text(leftborder, speakertopbound, currentspeaker);
	draw_text(leftborder, texttopborder, currentmsg);
}



